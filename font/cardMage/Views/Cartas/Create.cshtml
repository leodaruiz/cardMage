            @Html.DropDownListFor(model => model.TipoCartaID, ViewBag.TipoCartaID as SelectList)
            @Html.ValidationMessageFor(model => model.TipoCartaID)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
